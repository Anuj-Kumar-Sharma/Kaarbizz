<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvCarRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="0dp">

    <RelativeLayout
        android:id="@+id/rlCarRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/top_search_padding">

        <RelativeLayout
            android:id="@+id/rlCarInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/ivEachCarLogo"
                android:layout_width="@dimen/playlist_image_dimen"
                android:layout_height="@dimen/playlist_image_dimen"
                android:layout_centerVertical="true"
                android:padding="@dimen/_6sdp"
                app:srcCompat="@drawable/ic_dealer" />

            <RelativeLayout
                android:id="@+id/rlCarTexts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/top_search_padding"
                android:layout_marginStart="@dimen/top_search_padding"
                android:layout_toEndOf="@id/ivEachCarLogo">

                <com.anuj55149.kaarbizz.customViews.TypefaceTextView
                    android:id="@+id/tvCarModelName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingBottom="@dimen/rating_padding"
                    android:paddingEnd="@dimen/rating_padding"
                    android:text="4 2.0 TIP"
                    android:textColor="@color/black"
                    android:textSize="@dimen/top_search_text_size"
                    app:typeface="@string/Font_Montserrat_Regular" />


                <com.anuj55149.kaarbizz.customViews.TypefaceTextView
                    android:id="@+id/tvCarMakeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvCarModelName"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/rating_padding"
                    android:paddingEnd="@dimen/rating_padding"
                    android:paddingTop="@dimen/rating_padding"
                    android:text="Audi"
                    app:typeface="@string/Font_Montserrat_Regular" />

                <com.anuj55149.kaarbizz.customViews.TypefaceTextView
                    android:id="@+id/tvCarPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvCarMakeName"
                    android:paddingBottom="@dimen/rating_padding_double"
                    android:paddingEnd="@dimen/rating_padding"
                    android:paddingTop="@dimen/rating_padding"
                    android:text="4.31L"
                    android:textColor="@color/black"
                    app:typeface="@string/Font_Montserrat_SemiBold" />

            </RelativeLayout>

            <View
                android:id="@+id/vDividerLight"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/rlCarTexts"
                android:background="@color/colorPrimaryDark" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlCarInfo"
            android:paddingTop="@dimen/rating_padding_double">

            <com.anuj55149.kaarbizz.customViews.TypefaceTextView
                android:id="@+id/tvSingleDealerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/tvSingleRatings"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="@dimen/rating_padding"
                android:paddingEnd="@dimen/rating_padding"
                android:text="@string/my_name"
                android:textColor="@color/black"
                android:textSize="@dimen/top_search_text_size"
                app:typeface="@string/Font_Montserrat_Light" />


            <com.anuj55149.kaarbizz.customViews.TypefaceTextView
                android:id="@+id/tvSingleRatings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/background_round_corners_black"
                android:paddingBottom="@dimen/top_search_corner_radius"
                android:paddingEnd="@dimen/rating_padding"
                android:paddingStart="@dimen/rating_padding"
                android:paddingTop="@dimen/top_search_corner_radius"
                android:text="4.2"
                android:textColor="@color/white"
                android:textSize="@dimen/search_attribute_text_size"
                app:typeface="@string/Font_Montserrat_Regular" />


            <com.anuj55149.kaarbizz.customViews.TypefaceTextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvSingleDealerName"
                android:drawableStart="@drawable/ic_location_pin"
                android:drawableTint="@color/colorPrimaryMoreDark"
                android:text="4.2 Km away"
                app:typeface="@string/Font_Montserrat_Regular" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/vDivider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimaryMoreDark" />

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvDealerRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/top_search_padding">

        <ImageView
            android:id="@+id/ivEachDealer"
            android:layout_width="@dimen/playlist_image_dimen"
            android:layout_height="@dimen/playlist_image_dimen"
            android:layout_centerVertical="true"
            android:padding="@dimen/_6sdp"
            app:srcCompat="@drawable/ic_dealer" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/top_search_padding"
            android:layout_marginStart="@dimen/top_search_padding"
            android:layout_toEndOf="@id/ivEachDealer">

            <com.anuj55149.kaarbizz.customViews.TypefaceTextView
                android:id="@+id/tvSingleDealerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingBottom="@dimen/rating_padding"
                android:paddingEnd="@dimen/rating_padding"
                android:text="@string/my_name"
                android:textColor="@color/black"
                android:textSize="@dimen/top_search_text_size"
                app:typeface="@string/Font_Montserrat_Regular" />


            <com.anuj55149.kaarbizz.customViews.TypefaceTextView
                android:id="@+id/tvSingleRatings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvSingleDealerName"
                android:background="@drawable/background_round_corners_black"
                android:paddingBottom="@dimen/top_search_corner_radius"
                android:paddingEnd="@dimen/rating_padding"
                android:paddingStart="@dimen/rating_padding"
                android:paddingTop="@dimen/top_search_corner_radius"
                android:text="4.2"
                android:textColor="@color/white"
                android:textSize="@dimen/your_location_text_size"
                app:typeface="@string/Font_Montserrat_Regular" />


            <com.anuj55149.kaarbizz.customViews.TypefaceTextView
                android:id="@+id/ratingCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvSingleDealerName"
                android:layout_marginStart="@dimen/rating_padding"
                android:layout_toEndOf="@+id/tvSingleRatings"
                android:padding="@dimen/top_search_corner_radius"
                android:text="(142)"
                android:textSize="@dimen/your_location_text_size"
                app:typeface="@string/Font_Montserrat_Light" />

            <com.anuj55149.kaarbizz.customViews.TypefaceTextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvSingleRatings"
                android:drawableStart="@drawable/ic_location_pin"
                android:drawableTint="@color/colorPrimaryMoreDark"
                android:paddingBottom="@dimen/rating_padding"
                android:paddingEnd="@dimen/rating_padding"
                android:paddingTop="@dimen/rating_padding"
                android:text="4.2 Km away"
                app:typeface="@string/Font_Montserrat_Regular" />


        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/vDivider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimaryDark" />

</android.support.v7.widget.CardView>